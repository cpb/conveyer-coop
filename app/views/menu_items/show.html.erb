<%= turbo_frame_tag "modal" do %>
  <section class="modal" data-controller="modal" data-action="keyup@document->modal#escClose">
    <button type="button" class="modal__backdrop" tabindex="-1" data-action="modal#close"></button>
    <div class="modal__window px-4 py-8">
      <h2 class="text-2xl font-bold"><%= @item.name %></h2>
      <h3 class="text-sm text-gray-700"><%= @item.description %></h3>
    </div>
  </section>
<% end %>