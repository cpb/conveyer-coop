<header class="border-b border-grey-400">
  <div class="<%= "p-4 flex flex-col sm:flex-row items-center space-y-2 sm:justify-between " +
                    "#{ show_authed? ? "bg-white" : "bg-red-800" }" %>">
    <div class="sm:w-64"></div>
    <div class="flex-1 flex justify-center items-center space-y-2">
      <%= link_to render(partial: "logo"), root_path %>
    </div>
    <div class="sm:w-64 flex justify-end">
      <% if show_authed? %>
        <%= render_component(CartPreviewComponent, cart: current_cart) %>
      <% else %>
        <% if show_auth_links? %>
          <%= link_to "Sign In", login_path, class: "block text-white text-sm px-4 py-2" %>
          <%= link_to "Sign Up", register_path, class: "block bg-white text-sm px-4 py-2 rounded-full" %>
        <% end %>
      <% end %>
    </div>
  </div>
</header>
